
params {
    sample_sheet       = "sample_sheet.csv"
    flanking_sequences = "flanking_sequences.csv"
    results_dir        = "results"
    min_soft_clipped   = 20
    chunk_size         = 100000
    max_distance       = 2
    umi_length         = 10
    samtools           = "samtools"
    rscript            = "Rscript"
}

process {
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }

    cpus = 1
    memory = "1 GB"
    time = "1 hour"
}

profiles {
    standard {
        process.executor = 'local'
        executor {
            cpus = 4
            memory = "8 GB"
        }
    }

    bigserver {
        process.executor = 'local'
        executor {
            cpus = 40
            memory = "128 GB"
        }
    }

    cluster {
        process.executor = 'slurm'
        executor {
            queueSize = 200
            pollInterval = "30 sec"
            jobName = { "'$task.name'" }
        }
    }
}

